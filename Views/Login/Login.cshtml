@model User;

    <div class="container">
        <main role="main" class="pb-3">
            <div>
                <form method="post" asp-area="" asp-controller="Login" asp-action="ValidateUser">
                    <div class="form-group">
                        <label for="dataEmail">Email address</label>
                        <input type="email" class="form-control" id="dataEmail" aria-describedby="emailHelp" asp-for="Email">
                        <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
                    </div>
                    <div class="form-group">
                        <label for="dataPassword">Password</label>
                        <input type="password" class="form-control" id="dataPassword" asp-for="Password">
                    </div>
                    <button type="submit" class="btn btn-primary">Submit</button>
                </form>
            </div>
        </main>
    </div>